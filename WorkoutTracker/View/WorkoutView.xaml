<UserControl x:Class="WorkoutTracker.View.WorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkoutTracker.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Workout started" FontSize="14" Margin="0,0,10,0"/>
                <TextBlock Text="Bind to StartTime" FontSize="14"/>
            </StackPanel>

            <Button Content="Finish Workout" FontSize="14" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</UserControl>
