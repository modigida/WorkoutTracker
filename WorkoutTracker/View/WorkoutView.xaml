<UserControl x:Class="WorkoutTracker.View.WorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkoutTracker.View" xmlns:viewmodel="clr-namespace:WorkoutTracker.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0" >
            <TextBlock Text="Workout started" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center" />
            <TextBlock Text="{Binding WorkoutVM.Workout.Date, StringFormat={}{0:HH:mm}}" FontSize="14" VerticalAlignment="Center" />
        </StackPanel>

        <Button Content="Finish Workout" Command="{Binding WorkoutVM.FinishWorkoutCommand}" FontSize="14" HorizontalAlignment="Right" Margin="5" />

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5,35,5,5">
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox 
                    ItemsSource="{Binding ExerciseListVM.Exercises}"
                    SelectedItem="{Binding WorkoutVM.SelectedExercise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Width="120">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ExerciseName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" >
                    <TextBox Text="{Binding WorkoutVM.Weight}" VerticalContentAlignment="Center" Width="30" HorizontalContentAlignment="Right" >
                        <!-- Bind to weight -->
                    </TextBox>
                    <TextBlock Text="kg" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Left" >
                    <TextBox Text="{Binding WorkoutVM.Reps}" VerticalContentAlignment="Center" Width="30" HorizontalContentAlignment="Right" >
                        <!-- Bind to reps -->
                    </TextBox>
                    <TextBlock Text="reps" VerticalAlignment="Center" />
                </StackPanel>

                <Button Content="Save set" Command="{Binding WorkoutVM.SaveWorkoutExerciseCommand}" Grid.Column="3" Width="120" />

            </Grid>
            <ListView DataContext="{Binding WorkoutVM}"
                ItemsSource="{Binding WorkoutExercises}"
                Margin="0,5"
                Height="398">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>

                            <!-- Exercise Name -->
                            <TextBlock Text="{Binding ExerciseName}"
                                VerticalAlignment="Center"
                                Grid.Column="0" />

                            <!-- Sets -->
                            <ItemsControl ItemsSource="{Binding Sets}"
                                Grid.Column="1"
                                HorizontalContentAlignment="Stretch">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Weight -->
                                            <StackPanel Orientation="Horizontal" Grid.Column="0" >
                                                <TextBlock Text="{Binding Weight}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left" />
                                                <TextBlock Text="kg" Margin="5,0,0,0" />
                                            </StackPanel>

                                            <!-- Reps -->
                                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                                <TextBlock Text="{Binding Reps}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0" />
                                                <TextBlock Text="reps" Margin="5,0,0,0" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>

        <Grid Grid.Row="2" >
            <Border BorderBrush="#fffff0" BorderThickness="1" Margin="5,0,5,5" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
            
            <TextBlock Text="Workout summary" Grid.Row="0" HorizontalAlignment="Center" Margin="10" FontSize="18" />

                <Grid Grid.Row="1" Margin="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" >
                        <TextBlock Text="Total weight" HorizontalAlignment="Center" FontSize="14" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <TextBlock Text="{Binding WorkoutVM.TotalWeight}" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="kg" HorizontalAlignment="Center" FontSize="14" Margin="5,0,0,0" />
                        </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Vertical" >
                        <TextBlock Text="Total sets" HorizontalAlignment="Center" FontSize="14" />
                        <TextBlock Text="{Binding WorkoutVM.TotalSets}" HorizontalAlignment="Center" FontSize="14" />
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Vertical" >
                        <TextBlock Text="Total reps" HorizontalAlignment="Center" FontSize="14" />
                        <TextBlock Text="{Binding WorkoutVM.TotalReps}" HorizontalAlignment="Center" FontSize="14" />
                </StackPanel>
            </Grid>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
