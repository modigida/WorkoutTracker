<UserControl x:Class="WorkoutTracker.View.WorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkoutTracker.View" xmlns:viewmodel="clr-namespace:WorkoutTracker.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel Orientation="Horizontal" Margin="5" >
                <TextBlock Text="Workout started" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center" />
                <TextBlock Text="{Binding WorkoutVM.Workout.Date, StringFormat={}{0:HH:mm}}" FontSize="14" VerticalAlignment="Center" />
            </StackPanel>

            <Button Content="Finish Workout" Command="{Binding WorkoutVM.FinishWorkoutCommand}" FontSize="14" HorizontalAlignment="Right" Margin="5" />
        </Grid>
    </Grid>
</UserControl>
