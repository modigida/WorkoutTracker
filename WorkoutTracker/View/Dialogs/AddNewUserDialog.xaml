<Window x:Class="WorkoutTracker.View.Dialogs.AddNewUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkoutTracker.View.Dialogs" 
        xmlns:viewmodel="clr-namespace:WorkoutTracker.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Create User" Height="250" Width="250"
        WindowStartupLocation="CenterOwner" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding UserVM.NewUser.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 HorizontalContentAlignment="Center" FontSize="24"/>

        <Grid Grid.Row="1" Margin="5,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListView
                DataContext="{Binding UserVM}"
                ItemsSource="{Binding FavoriteExercises}"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="25"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="{Binding ExerciseName}" />
                            <TextBlock Text="{Binding TargetWeight}" Grid.Column="1" />
                            <Button 
                                Content="X" 
                                Command="{Binding DataContext.DeleteFavoriteExerciseCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                CommandParameter="{Binding}"
                                Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding UserVM.AvailableExercises}" 
                         Text="{Binding UserVM.AddedFavoriteExercise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding UserVM.SelectedFavoriteExercise, UpdateSourceTrigger=PropertyChanged}" 
                         VerticalContentAlignment="Center" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ExerciseName}"/>
                    </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBox Text="{Binding UserVM.TargetWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Column="1" HorizontalContentAlignment="Center" />

                <Button Content="Add" Command="{Binding UserVM.AddFavoriteExerciseCommand}" Grid.Column="2" />
            </Grid>
        </Grid>

        <Button Content="Save user" Command="{Binding UserVM.SaveAddNewUserCommand}" Grid.Row="2" />
    </Grid>
</Window>