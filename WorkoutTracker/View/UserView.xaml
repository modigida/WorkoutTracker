<UserControl x:Class="WorkoutTracker.View.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkoutTracker.View" xmlns:viewmodel="clr-namespace:WorkoutTracker.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox Text="{Binding UserVM.User.UserName}" FontSize="34" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Joined" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding UserVM.User.DateJoined, StringFormat='{}{0:MMMM dd, yyyy}'}" FontSize="24"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Goals" FontSize="24"/>
            <ListView 
                DataContext="{Binding UserVM}" 
                ItemsSource="{Binding FavoriteExercises}" 
                SelectedItem="{Binding SelectedFavoriteExercise, UpdateSourceTrigger=PropertyChanged}" 
                Grid.Row="1" FontSize="18" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding ExerciseName}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal" >
                                <TextBlock Text="{Binding TargetWeight}" />
                                <TextBlock Text="kg" Margin="5,0,0,0" />
                            </StackPanel>
                            <Button 
                                Content="D" 
                                Command="{Binding DataContext.DeleteFavoriteExerciseCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                CommandParameter="{Binding}" 
                                Grid.Column="2" BorderThickness='0' HorizontalContentAlignment="Right" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <Grid Grid.Row="2" Margin="5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />  
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding UserVM.AvailableExercises}" 
                    Text="{Binding UserVM.AddedFavoriteExercise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding UserVM.SelectedFavoriteExercise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    VerticalContentAlignment="Center" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ExerciseName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBox Text="{Binding UserVM.TargetWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Grid.Column="1" HorizontalContentAlignment="Center" />

                <Button Content="Add" Command="{Binding UserVM.AddFavoriteExerciseCommand}" Grid.Column="2" />
            </Grid>

        <Grid Grid.Row="3" HorizontalAlignment="Stretch" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <TextBlock Text="Personal Records" FontSize="24" />
            <ListView FontSize="18" DataContext="{Binding UserVM}" ItemsSource="{Binding PersonalRecords}" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Hidden" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding ExerciseName}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" >
                                <TextBlock Text="{Binding MaxWeight}" />
                                <TextBlock Text="kg" Margin="5,0,0,0" />
                            </StackPanel>
                            <TextBlock Text="{Binding DateAchieved, StringFormat='{}{0:d/M-yy}'}" Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Button Content="Save" Command="{Binding UserVM.SaveUserCommand}" HorizontalAlignment="Stretch" FontSize="18" Padding="5" Grid.Row="4" Margin="5" />

        <Button Content="Delete" Command="{Binding UserVM.DeleteUserCommand}" HorizontalAlignment="Right" Grid.Row="5" Margin="0,0,5,15" />
    </Grid>
</UserControl>
